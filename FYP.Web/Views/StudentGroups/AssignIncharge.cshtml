                                                                    <div class="card p-0">
                                                                        <div class="card-header no-border">
                                                                            <div class="widget-49-date-warning">
                                                                                <span class="badge bg-warning rounded-circle text-dark d-inline-flex align-items-center justify-content-center" style="width: 24px; height: 24px;">
                                                                                    @(counter = counter + 1)
                                                                                </span>
                                                                            </div>

                                                                            @*                                                                 <h5 class="card-title">@item.Name</h5>
                                                        *@                                                                <div class="ml-auto mx-1">
                                                                                <button type="button" class="btn btn-sm btn-primary editBTN" data-id="@item.Id" data-name="@item.Name" data-email="@item.Email">Edit</button>
                                                                                <button type="button" class="btn btn-sm btn-danger deleteBTN text-white" data-id="@item.Id" data-name="@item.Name" data-email="@item.Email">Delete</button>
                                                                            </div>
                                                                        </div>
                                                                    <div class="card-body pt-0 table-responsive" >
                                                                            <div class="widget-49">
                                                                                <div class="">
                                                                                    <table class="">
                                                                                        <tr>
                                                                                            <td class="text-black fw-bold">Name:</td>
                                                                                            <td>
                                                                                                <span class="text-green-600 mx-2 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300" >
                                                                                                    @item.Name
                                                                                                </span>
                                                                                            </td>
                                                                                        </tr>
                                                                                        <tr>
                                                                                            <td class="text-black fw-bold">Room:</td>
                                                                                            <td>
                                                                                                <span class="text-green-600 mx-2 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">
                                                                                                    @item.RoomAlloted
                                                                                                </span>
                                                                                            </td>
                                                                                        </tr>
                                                                                    </table>
                                                                                </div>

                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }

                                                        </div>
                                                    </div>


                                            }
                                            else
