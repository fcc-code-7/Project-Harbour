                                                                <option value="" selected>Select Evaluation</option>
                                                                <option value="Proposal">Proposal</option>
                                                                <option value="Mid">Mid</option>
                                                                <option value="Final">Final</option>
                                                            </select>
                                                        </div>
                                                        <span asp-validation-for="Evaluation" class="text-danger"></span>
                                                    </fieldset>
                                                </div>




