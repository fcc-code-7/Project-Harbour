@model FYP.Web.ViewModels.StudentGroupViewModel
@{
    ViewData["Title"] = "Student Groups";
    int counter = 0;
}

<!-- BEGIN: Content-->
<div id="ChangeDiv">
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body ">
                <section class="users-list-wrapper">
                    <div class="users-list-filter px-1">
                        <!-- Section 1 -->
                        <div class="mb-2 ">
                            <div class="p-6 bg-white text-black rounded-lg customheightcard">
                                <!-- Column 1: -->
                                <!-- Column 1: -->

                                <div class="w-full flex flex-wrap lg:flex-nowrap justify-between items-center" id="container">
                                    <!-- Left content (div1) -->
                                    <div class="p-8 text-2xl font-bold lg:text-left text-center w-full lg:w-auto" id="div1">
                                        <h1>Student Groups</h1>
                                    </div>

                                    <!-- Right content (div2) -->
                                    <div class="search-container flex justify-center lg:justify-end w-full lg:w-auto mt-1 lg:mt-0 mb-2" id="div2">
                                        <div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle mx-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Select Batch
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                @foreach (var item in Model.Batches)
                                                {
                                                    <a class="dropdown-item batchChange" data-id="@item">@item</a>
                                                }
                                                <a class="dropdown-item batchChange" data-id="All Projects">All Projects</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.StudentGroups == null || !Model.StudentGroups.Any())
                                {
                                    <div class="container mt-0 md:mt-5 lg:mt-5">
                                        <div class="row justify-content-center align-items-center" style="min-height: 50vh;">
                                            <div class="col-12 col-md-6 col-sm-12 col-lg-6">
                                                <div class="card">
                                                    <div class="card-header text-center">
                                                        <h5 class="card-title">No Student Group Exists</h5>
                                                    </div>
                                                    <div class="card-body text-center">
                                                        <p>It looks like there are currently no student groups available. Please create a new group to get started.</p>
                                                        <button type="button" class="btn btn-sm btn-primary" id="CreateGroup">Create New Group</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="container mt-0 md:mt-5 lg:mt-5">
                                        <div class="row d-flex justify-content-center align-items-center">
                                            @foreach (var item in Model.StudentGroups)
                                            {
                                                <div class="col-12 col-md-6 col-sm-12 col-lg-6">
                                                    <div class="card p-0">
                                                        <div class="card-header no-border">
                                                            <h5 class="card-title">@item.Name</h5>
                                                            <div class="ml-auto mx-1">
                                                                <button type="button" class="btn btn-sm btn-primary editBTN" data-id="@item.Id">Edit</button>
                                                            </div>
                                                            <div class="dropdown">
                                                                <a class="dropdown" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                    <i class="fa fa-ellipsis-v"></i>
                                                                </a>

                                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                                    <a class="dropdown-item changeSupervisor" data-id="@item.Id"><i class="fa fa-user-circle"></i>Change Supervisor</a>

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-body pt-0 ">
                                                            <div class="widget-49">
                                                                <div class="widget-49-title-wrapper">
                                                                    <div class="widget-49-date-warning">
                                                                        <span class="widget-49-date-day">@(counter = counter + 1)</span>
                                                                    </div>
                                                                    <div class="widget-49-meeting-info">
                                                                        <span class="widget-49-pro-title ">@(item.supervisorname ?? "N/A")</span>
                                                                        <span class="widget-49-meeting-time">@item.Batch</span>
                                                                    </div>
                                                                </div>
                                                                <ol class="widget-49-meeting-points">
                                                                    <li class="widget-49-meeting-item">
                                                                        <span>
                                                                            Leader:
                                                                            <span class="@(string.IsNullOrEmpty(item.LeaderName) ? "text-danger" : "text-success")">
                                                                                @(item.LeaderName ?? "Name yet to Enter")
                                                                            </span>
                                                                        </span>
                                                                    </li>
                                                                    <li class="widget-49-meeting-item">
                                                                        <span>
                                                                            Member:
                                                                            <span class="@(string.IsNullOrEmpty(item.member1) ? "text-danger" : "text-success")">
                                                                                @(item.member1 ?? "Name yet to Enter")
                                                                            </span>
                                                                        </span>
                                                                    </li>
                                                                    <li class="widget-49-meeting-item">
                                                                        <span>
                                                                            Member:
                                                                            <span class="@(string.IsNullOrEmpty(item.Member2) ? "text-danger" : "text-success")">
                                                                                @(item.Member2 ?? "Name yet to Enter")
                                                                            </span>
                                                                        </span>
                                                                    </li>
                                                                </ol>

                                                                @* <table class="responsive mx-1">
                                                        <tbody>
                                                        <tr>
                                                        <td>Leader:</td>
                                                        <td class="text-green-600">
                                                        <span class="mx-2">@(item.LeaderName)</span>
                                                        </td>
                                                        </tr>
                                                        <tr>
                                                        <td>Member:</td>
                                                        <td class="text-green-600">
                                                        <span class="mx-2">@(item.member1)</span>
                                                        </td>
                                                        </tr>
                                                        <tr>
                                                        <td>Member:</td>
                                                        <td class="text-green-600">
                                                        <span class="mx-2">@(item.Member2)</span>
                                                        </td>
                                                        </tr>
                                                        </tbody>
                                                        </table>
                                                        *@

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            @if (Model.StudentGroups.Count() < 2)
                                            {
                                                <div class="col-12 col-md-6 col-sm-12 col-lg-3 btn" id="CreateGroup">
                                                    <div class="card text-center ">
                                                        <div class="card-body ">
                                                            <i class="fa fa-plus fa-10x colorchange"></i> <!-- Large Plus Icon -->
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                </section>
            </div>
        </div>
    </div>
</div>
<!-- END: Content-->
