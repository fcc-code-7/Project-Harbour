    @* Edit Group *@
            $('.editBTN').on('click', function () {
                var ID = $(this).data("id");
                $.ajax({
                    url: '/studentgroups/EditGroup',
                    type: "GET",
                    data: { id: ID },
                    success: function (response) {
                        $("#MainContainer").html(response);
                    },
                    error: function () {

                    }
                });
            });
    @* ChangeSupervisor *@
            $('.changeSupervisor').on('click', function () {
                var groupId = $(this).data("id");
                $.ajax({
                    url: '/studentgroups/ChangeSupervisor',
                    type: "GET",
                    data: { groupId: groupId },
                    success: function (response) {
                        $("#MainContainer").html(response);
                    },
                    error: function () {

                    }
                });
            });
        $(".batchChange").click(function () {
            var batch = $(this).data("id");
            $.ajax({
                url: '/studentgroups/StudentGroupbyBatch',
                type: "GET",
                data: { batch: batch }, // Send batch as a query parameter
                success: function (response) {
                    $("#ChangeDiv").html(response);

                    $("#dropdownMenuButton").text(batch);
                },
                error: function () {

                }
            });


        });

    });
</script>

