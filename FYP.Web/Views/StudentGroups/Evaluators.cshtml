<script>
    $(document).ready(function () {
        $(document).on('click', '#AddRoomIncharge', function (e) {
            e.preventDefault();
            $('#modalRoomIncharge').modal('show');
        });
        $(document).on('click', '#AddRoom', function (e) {
            e.preventDefault();
            $('#modalRoom').modal('show');
        });
        $(document).on('click', '#modalClose', function (e) {
            e.preventDefault();
            $('#modalRoomIncharge').modal('hide');
        });
        $(document).on('click', '#modalCloseRoom', function (e) {
            e.preventDefault();
            $('#modalRoom').modal('hide');
        });
        $(document).off('click', '#SaveRoomIncharge').on('click', '#SaveRoomIncharge', function (e) {
            showLoadingSpinner(); // Show the loading spinner
            var Name = $("#RoomInChargeName").val();
            var Email = $("#RoomInChargeEmail").val();
            $.ajax({
                url: "/studentgroups/FetchRoomIncharge",
                type: "POST",
                data: { name: Name, email:Email },
                success: function (response) {
                    $('#modalRoomIncharge').modal('hide');
                    hideLoadingSpinner(); // Hide the loading spinner
                    // Clear the current RoomInchargeContainer
                    $("#RoomInchargeContainer").empty();

                    // Build new in-charge dropdown
                    var inchargeSelectHtml = '<div class="form-group"><div style="display: flex; justify-content: space-between; align-items: center;">'
                        + '<label>In-Charge <span class="text-danger">(if not Listed click Add)</span></label>'
                        + '<a id="AddRoomIncharge" class="custom-badge-green">Add</a></div>'
                        + '<fieldset><div class="input-group">'
                        + '<div class="input-group-prepend">'
                        + '<span class="input-group-text " id="basic-addon3">'
                        + '<i class="fa fa-id-badge" style="color: transparent; -webkit-text-stroke: 1px black;"></i></span>'
                        + '</div>'
                        + '<select id="RoomIncharge" class="form-control">'
                        + '<option value="">Select In-Charge</option>';

                    // Assuming response.room contains the new list of in-charges
                    response.room.roomInCharges.forEach(function (item) {
                        inchargeSelectHtml += '<option value="' + item.id + '">' + item.name + '</option>';
                    });

                    inchargeSelectHtml += '</select></div>'
                        + '<span asp-validation-for="RoomIncharge" class="text-danger"></span></fieldset></div>';

                    // Append the new in-charge select element to RoomInchargeContainer
                    $("#RoomInchargeContainer").append(inchargeSelectHtml);
                },
                error: function () {

                }
            });

        });
