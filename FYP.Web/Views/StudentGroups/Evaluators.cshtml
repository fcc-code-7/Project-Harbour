<script>
    $(document).ready(function () {
        // Store initial values when the form loads
        var initialValues = {
            groupID: $("#groupID").val(),
            Member1ID: $("#Member1ID").val(),
            Member2ID: $("#Member2ID").val(),
        };

        // Disable the submit button by default
        $("#EvaluatorFormSubmit").prop('disabled', true);

        // Function to check if any field has changed
        function checkForChanges() {
            var currentValues = {
                groupID: $("#groupID").val(),
                Member1ID: $("#Member1ID").val(),
                Member2ID: $("#Member2ID").val(),
            };

            // Compare each field with the initial values
            var hasChanged = false;
            $.each(currentValues, function (key, value) {
                if (initialValues[key] !== value) {
                    hasChanged = true;
                }
            });

            // Enable or disable the submit button based on changes
            if (hasChanged) {
                $("#EvaluatorFormSubmit").prop('disabled', false);
            } else {
                $("#EvaluatorFormSubmit").prop('disabled', true);
            }
        }

        // Monitor changes in input fields
        $("select").on('input change', function () {
            checkForChanges();
        });
    });

</script>


