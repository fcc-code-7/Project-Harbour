<script>
    $(document).ready(function () {
        function checkFields() {
            const batchSelected = $('#Batchs').val();
            const evaluationSelected = $('#Evaluations').val();
            if (batchSelected && evaluationSelected) {
                $('#Download').prop('disabled', false);
            } else {
                $('#Download').prop('disabled', true);
            }
        }

        // Initial check on page load
        checkFields();

        // Event listeners for changes in dropdowns
        $('#Batchs, #Evaluations').on('change', checkFields);
        $('#modalDownload').on('hidden.bs.modal', function () {
            $('#Batchs').val('').trigger('change');        // Clear batch selection
            $('#Evaluations').val('').trigger('change');   // Clear evaluation selection
            $('#Download').prop('disabled', true);         // Disable the download button
        });
    });
    $(document).ready(function () {
        var RoomInchargeId = null;
        var RoomInchargeName = null;
        var RoomInchargeEmail = null;

        //Show
        $(document).on('click', '#DownloadIncharge', function (e) {
            e.preventDefault();
            $('#modalDownload').modal('show');
        }); $(document).on('click', '#AddRoomIncharge', function (e) {
            e.preventDefault();
            $('#modalRoomIncharge').modal('show');
        });
        //Hide
        $(document).on('click', '#modalClose', function (e) {
            e.preventDefault();
            $('#modalRoomIncharge').modal('hide');
        })
        $(document).on('click', '#modalCloseEdit', function (e) {
            e.preventDefault();
            $('#modalRoomInchargeEdit').modal('hide');
        });
        $(document).on('click', '#modalDownloadClose', function (e) {
            e.preventDefault();
            $('#modalDownload').modal('hide');
        });
        $(document).off('click', '#Save').on('click', '#Save', function (e) {
            e.preventDefault();
            $('#modalRoom').modal('hide');
            $('.modal-backdrop').remove();
            showLoadingSpinner();
            var RoomInChargeEmail = $("#RoomInChargeEmail").val();
            var RoomInChargeName = $("#RoomInChargeName").val();

            $.ajax({
                url: "/studentgroups/FetchRoomIncharges",
                type: "POST",
                data: { RoomInChargeEmail: RoomInChargeEmail, RoomInChargeName: RoomInChargeName },
                success: function (response) {
                    hideLoadingSpinner();
                    $("#MainContainer").empty();
                    $("#MainContainer").html(response);
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    hideLoadingSpinner(); // Hide the loading spinner
                    console.error("Error fetching rooms:", textStatus, errorThrown);
                    alert("An error occurred while fetching the rooms. Please try again.");
                }
            });
        });
        $(document).on('click', '.Editbutton', function (e) {
            e.preventDefault();
            RoomInchargeId = $(this).data("id");
            RoomInchargeName = $(this).data("name");
            RoomInchargeEmail = $(this).data("email");
            $("#InChargeName").val(RoomInchargeName);
            $("#InChargeEmail").val(RoomInchargeEmail);
            console.log(RoomInchargeId)
            console.log(RoomInchargeEmail)
            $('#modalRoomInchargeEdit').modal('show');
        });
        $(document).off('click', '#SaveEdit').on('click', '#SaveEdit', function (e) {
            e.preventDefault();
            $('#modalRoom').modal('hide');
            $('.modal-backdrop').remove();
            showLoadingSpinner();
            var email = $("#InChargeEmail").val();
            var name = $("#InChargeName").val();

            $.ajax({
                url: "/studentgroups/FetchRoomIncharges",
                type: "POST",
                data: { id: RoomInchargeId, RoomInChargeEmail: email, RoomInChargeName: name, istrue: "true" },
                success: function (response) {
                    hideLoadingSpinner();

                    $("#MainContainer").empty();
                    $("#MainContainer").html(response);

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    hideLoadingSpinner(); // Hide the loading spinner
                    console.error("Error fetching rooms:", textStatus, errorThrown);
                    alert("An error occurred while fetching the rooms. Please try again.");
                }
            });
        });
        $(document).off('click', '#Download').on('click', '#Download', function (e) {
            e.preventDefault();
            $('#modalDownload').modal('hide');
            $('.modal-backdrop').remove();
            showLoadingSpinner();

            var batch = $("#Batchs").val();
            var evaluation = $("#Evaluations").val();

            // First AJAX call to check if data exists
            $.ajax({
                url: "/studentgroups/ExportAllotedRoomInchargesToExcel",
                type: "POST",
                data: { Batch: batch, Evaluation: evaluation },
                success: function (response) {
                    hideLoadingSpinner();

                    if (response.success) {
                        // Redirect to download endpoint if data exists
                        window.location.href = `/studentgroups/DownloadExcel?Batch=${batch}&Evaluation=${evaluation}`;
                    } else {
                        // Display alert if data does not exist
                        Swal.fire({
                            title: 'Data Not Exist!',
                            icon: 'warning',
                            confirmButtonText: 'OK',
                            customClass: { confirmButton: 'btn btn-warning' },
                            showCancelButton: false,
                            buttonsStyling: false
                        });
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    hideLoadingSpinner();
                    console.error("Error checking data existence:", textStatus, errorThrown);
                    alert("An error occurred. Please try again.");
                }
            });
        });

        $(document).on('click', '.deleteBTN', function (e) {
            e.preventDefault();
            RoomInchargeId = $(this).data("id");
            $('#deleteRoomModal').modal('show');
        });
        $(document).off('click', '#confirmDelete').on('click', '#confirmDelete', function (e) {
            e.preventDefault();
            $('#modalRoom').modal('hide');
            $('.modal-backdrop').remove();
            showLoadingSpinner();
            $.ajax({
                url: "/studentgroups/DeleteRoomIncharge",
                type: "POST",
                data: { id: RoomInchargeId },
                success: function (response) {
                    hideLoadingSpinner();

                    $("#MainContainer").empty();
                    $("#MainContainer").html(response);

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    hideLoadingSpinner(); // Hide the loading spinner
                    console.error("Error fetching rooms:", textStatus, errorThrown);
                    alert("An error occurred while fetching the rooms. Please try again.");
                }
            });
        });
        $(document).off('click', '#AssignIncharge').on('click', '#AssignIncharge', function (e) {
            e.preventDefault();

            showLoadingSpinner();
            $.ajax({
                url: "/studentgroups/AssignIncharge",
                type: "GET",
                success: function (response) {
                    hideLoadingSpinner();

                    $("#MainContainer").html(response);

                },
                error: function (jqXHR, textStatus, errorThrown) {
                    hideLoadingSpinner(); // Hide the loading spinner
                    Swal.fire({
                        title: 'An error occurred while fetching the rooms. Please try again! ',
                        icon: 'danger',
                        confirmButtonText: 'OK',
                        customClass: {
                            confirmButton: 'btn btn-danger',
                        },
                        showCancelButton: false,
                        buttonsStyling: false,
                    });
                }
            });
        });

    });

</script>


