                report: "#"
            },
            {
                title: "Child App",
                supervisor: "Fasiha Akram",
                year: 2024,
                batch: "fall 2024",
                report: "#"
            },
            {
                title: "Agriculture drone",
                supervisor: "Aisha Danish",
                year: 2024,
                batch: "Spring 2024",
                report: "#"
            },
            {
                title: "Ai interview analyzer",
                supervisor: "Dr raheel",
                year: 2023,
                batch: "Spring 2023",
                report: "#"
            },
            {
                title: "Smart copy checker",
                supervisor: "Malik Ali",
                year: 2022,
                batch: "Spring 2022",
                report: "#"
            },
        ];


        const projectsContainer = document.getElementById("projectsContainer");
        const searchInput = document.getElementById("searchInput");

        // Function to display projects

        function displayProjects(filteredProjects) {
            projectsContainer.innerHTML = ""; // Clear the container
            if (filteredProjects.length === 0) {
                projectsContainer.innerHTML = `<p class="text-center text-muted fs-5">No projects found</p>`;
                return;
            }
            filteredProjects.forEach((project, index) => {
                const card = document.createElement("div");
                card.classList.add("col-md-4", "mt-3", "animated-card");
                card.innerHTML = `
                    <div class="projectCard px-3 py-2 shadow bg-white borderRadius">
                        <p class="fs-6 fw-bold text-center text-primary">${project.title}</p>
                        <p><strong>Supervisor:</strong> ${project.supervisor}</p>
                        <p><strong>Year:</strong> ${project.year}</p>
                        <p><strong>Batch:</strong> ${project.batch}</p>
                        <label><strong>Report:</strong>
                            <a href="${project.report}" class="btn btn-danger text-white px-2 py-1 rounded border">Download</a>
                        </label>
                    </div>
                `;
                projectsContainer.appendChild(card);

                // Add animation delay
                setTimeout(() => {
                    card.classList.add("show");
                }, index * 500);
            });
        }

        // Search functionality
        searchInput.addEventListener("input", () => {
            const query = searchInput.value.toLowerCase();
            if (query === "") {
                // If search is empty, clear the container
                projectsContainer.innerHTML = "";
                return;
            }
            const filteredProjects = projects.filter(
                (project) =>
                    project.title.toLowerCase().includes(query) ||
                    project.year.toString().includes(query) ||
                    project.batch.toLowerCase().includes(query) ||
                    project.supervisor.toLowerCase().includes(query)
            );
            displayProjects(filteredProjects);
        });

    </script>

