<script>
    $('.ProjectDetails').on('click', function () {
        var Code = $(this).data('id');
        $.ajax({
            url: '/project/projectdetails',
            type: "GET",
            data: { code: Code },
            success: function (response) {
                $("#MainContainer").html(response);
            },
            error: function () {
                // handle error
            }
        });
    });
    $(".batchChange").click(function () {
        var batch = $(this).data("id");
        $.ajax({
            url: '/supervisor/ProjectGroupbyBatch',
            type: "GET",
            data: { batch: batch }, // Send batch as a query parameter
            success: function (response) {
                $("#ChangeDiv").html(response);
                $("#dropdownMenuButton").text(batch);
            },
            error: function () {

            }
        });


    });


</script>
