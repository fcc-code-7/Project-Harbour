@model FYP.Web.ViewModels.ProjectViewModel
@{
    ViewData["Title"] = "Projects";
    int counter = 0;

}
@section Styles {
    <!-- BEGIN: Page CSS-->
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/menu/menu-types/vertical-menu.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/core/colors/palette-gradient.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/fonts/simple-line-icons/style.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/pages/card-statistics.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/pages/vertical-timeline.css">
    <!-- END: Page CSS-->
}
<!-- BEGIN: Content-->
<div id="ChangeDiv">
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body ">
            <!-- Section 1 -->
            <div class="mb-2 ">
                <div class="p-6 bg-white text-black rounded-lg customheightcard">
                    <!-- Column 1: -->

                    <div class="w-full flex justify-between items-center" id="container">
                        <!-- Left content (div1) -->
                        <div class="p-8 ml-7 text-2xl font-bold" id="div1">
                            <h1>Projects</h1>
                        </div>

                        <!-- Right content (div2) -->
                        <div class="search-container" id="div2">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Select Batch
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @foreach (var item in Model.batches)
                                    {
                                        <a class="dropdown-item batchChange" data-id="@item">@item</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container mt-0 md:mt-5 lg:mt-5 ">
                        <div class="row d-flex justify-content-center">
                            @if (Model.projects == null || !Model.projects.Any())
                            {
                                <div class="container mt-0 md:mt-5 lg:mt-5">
                                    <div class="row justify-content-center align-items-center" style="min-height: 50vh;">
                                        <div class="col-12 col-md-6 col-sm-12 col-lg-6">
                                            <div class="card">
                                                    <div class="card-header d-flex justify-content-center align-items-center">
                                                        <h5 class="card-title"><i class="feather icon-alert-triangle text-danger mx-1"></i>No Project Exists</h5>
                                                    </div>
                                                <div class="card-body text-center mb-4">
                                                    <p>It looks like there are currently no projects available.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {

                                @foreach (var item in Model.projects)
                                {
                                    <div class="col-12 col-md-6 col-sm-12 col-lg-5">
                                        <div class="card card-margin ProjectDetails" data-id="@item.code" >
                                            <div class="card-header no-border">
                                                <h5 class="card-title">@item.code</h5>
                                            </div>
                                            <div class="card-body pt-0">
                                                <div class="widget-49">
                                                    <div class="widget-49-title-wrapper">
                                                        <div class="widget-49-date-warning">
                                                            <span class="widget-49-date-day">@(counter = counter + 1)</span>
                                                        </div>
                                                        <div class="widget-49-meeting-info">
                                                            <span class="widget-49-pro-title">@item.Title</span>
                                                            <span class="widget-49-meeting-time">@item.ProjectCategory</span>
                                                        </div>
                                                    </div>
                                                    <ol class="widget-49-meeting-points">
                                                        <li class="widget-49-meeting-item"><span>Group: @item.projectGroup</span></li>
                                                
                                               
                                                            @if (item.Status == "Approved")
                                                            {
                                                            <li class="widget-49-meeting-item text-success"><span>Status: <span class="text-success">Approved</span> </span></li>

                                                            }
                                                            else
                                                            {
                                                            <li class="widget-49-meeting-item text-danger"><span>Status: <span class="text-danger">Not Approved</span></span></li>

                                                            }
                                                        
                                                    </ol>
                                                    <div class="widget-49-meeting-action">
                                                        <a class="btn btn-sm btn-flash-border-warning ProjectDetails" data-id="@item.code">DETAILS</a>
                                                        @if (item.Status == "Approved")
                                                        {
                                                        <a href="#" class="btn btn-sm btn-flash-border-warning Weekly Logs">Weekly Logs</a>
                                                            <a href="#" class="btn btn-sm btn-flash-border-warning Submissions">Submissions</a>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }

                            }
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div>
</div>
<!-- END: Content-->
@section Scripts {

    <!-- BEGIN: Page Vendor JS-->
    <script src="~/app-assets/vendors/js/charts/apexcharts/apexcharts.min.js"></script>
    <!-- END: Page Vendor JS-->
