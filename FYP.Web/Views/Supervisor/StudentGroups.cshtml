@model FYP.Web.ViewModels.StudentGroupViewModel
@{
    ViewData["Title"] = "Student Groups";
}

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body ">
            <section class="users-list-wrapper">
                <div class="users-list-filter px-1">
                    <!-- Section 1 -->
                    <div class="mb-2 ">
                        <div class=" bg-white text-black rounded-lg customheightcard">
                            <!-- Column 1: -->

                            <div class=" grid sm:grid-cols-1 lg:grid-cols-2 gap-4 ">
                                <div class="p-8 ml-7 text-2xl font-bold ">
                                    <h1>Student Groups</h1>
                                </div>

                            </div>
                            @if (Model.StudentGroups == null || !Model.StudentGroups.Any())
                            {
                                <div class="container mt-0 md:mt-5 lg:mt-5">
                                    <div class="row justify-content-center align-items-center" style="min-height: 50vh;">
                                        <div class="col-12 col-md-6 col-sm-12 col-lg-6">
                                            <div class="card">
                                                <div class="card-header text-center">
                                                    <h5 class="card-title">No Student Group Exists</h5>
                                                </div>
                                                <div class="card-body text-center">
                                                    <p>It looks like there are currently no student groups available. Please create a new group to get started.</p>
                                                    <button type="button" class="btn btn-sm btn-primary" id="CreateGroup">Create New Group</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>


                            }
                            else
                            {
                                <div class="container mt-0 md:mt-5 lg:mt-5">
                                    <div class="row d-flex justify-content-center">
                                        @foreach (var item in Model.StudentGroups)
                                        {

                                            <div class="col-12 col-md-6 col-sm-12 col-lg-4">
                                                <div class="card p-0">
                                                    <div class="card-header no-border">
                                                        <h5 class="card-title">@item.Name</h5>
                                                    </div>
                                                    <div class="card-body pt-0 ">
                                                        <div class="widget-49">
                                                            <div class="widget-49-title-wrapper">
                                                                <div class="widget-49-date-warning">
                                                                    <span class="widget-49-date-day">13</span>
                                                                    <span class="widget-49-date-month">apr</span>
                                                                </div>
                                                                <div class="widget-49-meeting-info">
                                                                    <span class="widget-49-pro-title">Project Name:@(item.projectname ?? "N/A")</span>
                                                                    <span class="widget-49-meeting-time">@item.Batch - @item.Year</span>
                                                                </div>
                                                            </div>
                                                            <ol class="widget-49-meeting-points">
                                                                <li class="widget-49-meeting-item"><span>Leader:<span class="badge  badge-primary">@item.student1LID</span></span></li>
                                                                <li class="widget-49-meeting-item"><span>Member:<span class="badge  badge-primary">@item.student2ID</span></span></li>
                                                                <li class="widget-49-meeting-item"><span>Member:<span class="badge  badge-primary">@item.student3ID</span></span></li>
                                                            </ol>
                                                            <div class="widget-49-meeting-action">
                                                                <a href="#" class="btn btn-sm btn-flash-border-warning">View All</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>


                                        }
                                        @if (Model.StudentGroups.Count() < 2)
                                        {

                                            <div class="col-12 col-md-6 col-sm-12 col-lg-3 btn" id="CreateGroup">
                                                <div class="card text-center ">

                                                    <div class="card-body ">
                                                        <i class="fa fa-plus fa-10x colorchange"></i> <!-- Large Plus Icon -->
                                                    </div>
                                                </div>
                                            </div>

                                        }
                                    </div>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
</div>
<!-- END: Content-->
