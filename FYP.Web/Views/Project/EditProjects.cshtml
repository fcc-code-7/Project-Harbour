<script>
    $(document).ready(function () {
        // $("#previousbtn").click(function () {
        //     $.ajax({
        //         url: '/project/projects',
        //         type: "GET",
        //         success: function (response) {
        //             $("#MainContainer").html(response);
        //         },
        //         error: function () {

        //         }
        //     });

        // });
        $("#ProjectCategory").change(function () {
            var categoryval = $(this).val();
            if (categoryval === "others") {
                $("#otherDisplay").css("display", "block");
            } else {
                $("#otherDisplay").css("display", "none");

            }

        });

        $("#formsubmit").click(function (e) {
            e.preventDefault();  // Prevent default form submission
            var formData = {
                ProId: $("#ProId").val(),
                companyID: $("#companyID").val(),
                code: $("#code").val(),
                supervisorname: $("#supervisorname").val(),
                projectGroup: $("#projectGroup").val(),
                Others: $("#Others").val(),
                Tools: $("#Tools").val(),
                companyName: $("#companyName").val(),
                mentorcontact: $("#mentorcontact").val(),
                Title: $("#Title").val(),
                groupname: $("#groupname").val(),
                ProjectCategory: $("#ProjectCategory").val(),
                Specialization: $("#Specialization").val(),
                companyMentor: $("#companyMentor").val(),
                mentoremail: $("#mentoremail").val(),
                Summary: $("#Summary").val(),
                objectives: $("#objectives").val(),
                ExpectedResults: $("#ExpectedResults").val(),
                batch: $("#batch").val(),
            };

            $.ajax({
                type: "POST",
                url: "/project/EditProjects",
                data: JSON.stringify(formData),
                contentType: "application/json; charset=utf-8",  // Sending JSON
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function (xhr) {
                    // Handle error
                    console.log("Error: " + xhr.status + " - " + xhr.statusText);
                }
            });
        });


    });
</script>

