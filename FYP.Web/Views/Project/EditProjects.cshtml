@model FYP.Web.ViewModels.ProjectViewModel
@{
    ViewData["Title"] = "Projects";
   

}

<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body ">
            <section class="users-list-wrapper">
                <div class="users-list-filter px-1">
                    <!-- Section 1 -->
                    <div class="mb-2 ">
                        <div class="p-3 bg-white text-black rounded-lg  ">
                            <div class="arrow-container">
                                <i class="feather icon-arrow-left btn p-0 m-0" id="previousbtn"></i>
                            </div>
                            <!-- Column 1: -->
                            <div class="" style="min-height:100px">
                                <div class="w-full grid sm:grid-cols-1 lg:grid-cols-2 gap-4 ">
                                    <div class="p-8 ml-7 text-2xl font-bold">
                                        <h1>Edit</h1>
                                    </div>

                                </div>
                                <form class="form" id="submitform">
                                    <div class="modal-body">
                                        <div class="form-body">
                                            <div class="row d-flex justify-content-center">
                                                <div class="col-12 col-lg-6 col-md-6 col-sm-12 ">
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">

                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon1"><i class="feather icon-user"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="code" placeholder="Enter code" value="@Model.code" asp-for="code" aria-describedby="basic-addon1" name="code" readonly required>
                                                                <input type="text" class="form-control hidden" id="ProId" value="@Model.ProId" asp-for="ProId" aria-describedby="basic-addon1" name="ProId" readonly required>
                                                                <input type="text" class="form-control hidden" id="companyID" value="@Model.companyID" asp-for="companyID" aria-describedby="basic-addon1" name="companyID" readonly required>


                                                            </div>
                                                            <span asp-validation-for="code" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon2"><i class="fa fa-user-o"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="supervisorname" placeholder="Enter Supervisor Name" value="@(Model.supervisorname ?? "")" asp-for="supervisorname" aria-describedby="basic-addon1" name="supervisorname" readonly required>

                                                            </div>
                                                            <span asp-validation-for="supervisorname" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon3"><i class="fa fa-home"></i></span>
                                                                </div>
                                                                @{
                                                                    var projectGroup = new List<SelectListItem>
                                                                {
                                                                new SelectListItem { Value = "", Text = "Select Department", Selected = string.IsNullOrEmpty(Model.projectGroup) },
                                                                new SelectListItem { Value = "CS", Text = "CS", Selected = Model.projectGroup == "CS" },
                                                                new SelectListItem { Value = "IT", Text = "IT", Selected = Model.projectGroup == "IT" },
                                                                };
                                                                }


                                                                @Html.DropDownList("projectGroup", projectGroup, new { @class = "form-control" })

                                                            </div>
                                                            <span asp-validation-for="projectGroup" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group" style="display:none" id="otherDisplay">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon3"><i class="feather icon-list"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="Others" placeholder="Enter Other Category" asp-for="Others" aria-describedby="basic-addon1" name="Others" required>

                                                            </div>
                                                            <span asp-validation-for="Others" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon3"><i class="feather icon-settings"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="Tools" placeholder="Enter Tools" asp-for="Tools" aria-describedby="basic-addon1" name="Tools" required>

                                                            </div>
                                                            <span asp-validation-for="Tools" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon3"><i class="fa fa-university"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="companyName" placeholder="Enter companyName" asp-for="companyName" aria-describedby="basic-addon1" name="companyName" required>

                                                            </div>
                                                            <span asp-validation-for="companyName" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon3"><i class="feather icon-phone"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="mentorcontact" placeholder="Enter mentorcontact" asp-for="mentorcontact" aria-describedby="basic-addon1" name="mentorcontact" required>

                                                            </div>
                                                            <span asp-validation-for="mentorcontact" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>

                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon3"><i class="feather icon-phone"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="batch" placeholder="Enter batch" value="@Model.batch" asp-for="batch" aria-describedby="basic-addon1" name="batch" readonly required>

                                                            </div>
                                                            <span asp-validation-for="batch" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>

                                                </div>
                                                <div class="col-12 col-lg-6 col-md-6 col-sm-12 ">
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">

                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon1"><i class="feather icon-edit-2"></i></span>
                                                                </div>
                                                                <input type="text" class="form-control" id="Title" placeholder="Enter Title" asp-for="Title" aria-describedby="basic-addon1" name="Title" required>


                                                            </div>
                                                            <span asp-validation-for="Title" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon2">
                                                                        <i class="feather icon-users"></i>
                                                                    </span>
                                                                </div>
                                                                <input type="text" class="form-control" id="groupname" placeholder="Enter groupname" value="@(Model.groupname ?? "")" asp-for="groupname" aria-describedby="basic-addon1" name="groupname" readonly required>

                                                            </div>
                                                            <span asp-validation-for="groupname" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>


                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon3"><i class="fa fa-home"></i></span>
                                                                </div>
                                                                @{
                                                                    var ProjectCategory = new List<SelectListItem>
                                                                {
                                                                new SelectListItem { Value = "", Text = "Select Department", Selected = string.IsNullOrEmpty(Model.ProjectCategory) },
                                                                new SelectListItem { Value = "Industrial", Text = "Industrial", Selected = Model.ProjectCategory == "Industrial" },
                                                                new SelectListItem { Value = "AI(Mining/Computer Vision/Image processing/Machine Learning)", Text = "AI(Mining/Computer Vision/Image processing/Machine Learning)", Selected = Model.ProjectCategory == "AI(Mining/Computer Vision/Image processing/Machine Learning)" },
                                                                new SelectListItem { Value = "Mobile App", Text = "Mobile App", Selected = Model.ProjectCategory == "Mobile App" },
                                                                new SelectListItem { Value = "Wireless Communication", Text = "Wireless Communication", Selected = Model.ProjectCategory == "Wireless Communication" },
                                                                new SelectListItem { Value = "Network & Security", Text = "Network & Security", Selected = Model.ProjectCategory == "Network & Security" },
                                                                new SelectListItem { Value = "Web App", Text = "Web App", Selected = Model.ProjectCategory == "Web App" },
                                                                new SelectListItem { Value = "Software Application/ERP", Text = "Software Application/ERP", Selected = Model.ProjectCategory == "Software Application/ERP" },
                                                                new SelectListItem { Value = "IOT/(H/W+S/W Application)", Text = "IOT/(H/W+S/W Application)", Selected = Model.ProjectCategory == "IOT/(H/W+S/W Application)" },
                                                                new SelectListItem { Value = "others", Text = "Others", Selected = Model.ProjectCategory == "others" },
                                                                };
                                                                }


                                                                @Html.DropDownList("ProjectCategory", ProjectCategory, new { @class = "form-control" })

                                                            </div>
                                                            <span asp-validation-for="ProjectCategory" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>

                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon2">
                                                                        <i class="fa fa-pencil-square-o"></i>
                                                                    </span>
                                                                </div>
                                                                <input type="text" class="form-control" id="Specialization" placeholder="Enter Area/Specialization" asp-for="Specialization" aria-describedby="basic-addon1" name="Specialization" required>

                                                            </div>
                                                            <span asp-validation-for="Specialization" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon2">
                                                                        <i class="feather icon-user-plus"></i>
                                                                    </span>
                                                                </div>
                                                                <input type="text" class="form-control" id="companyMentor" placeholder="Enter Mentor Name(Company)" asp-for="companyMentor" aria-describedby="basic-addon1" name="companyMentor" required>

                                                            </div>
                                                            <span asp-validation-for="companyMentor" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>
                                                    <div class="form-group">
                                                        <fieldset>
                                                            <div class="input-group">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text " id="basic-addon2">
                                                                        <i class="feather icon-mail"></i>
                                                                    </span>
                                                                </div>
                                                                <input type="text" class="form-control" id="mentoremail" placeholder="Enter Mentor Email" asp-for="mentoremail" aria-describedby="basic-addon1" name="mentoremail" required>

                                                            </div>
                                                            <span asp-validation-for="mentoremail" class="text-danger"></span>
                                                        </fieldset>
                                                    </div>


                                                </div>

                                                <div class="col-12 col-lg-12 col-md-12 col-sm-12 ">
                                                    <div class="form-group">
                                                        <label for="Summary">Summary</label>
                                                        <textarea class="form-control" id="Summary" placeholder="Enter SUMMARY OF PROPOSED PROJECT (MAXIMUM 300 WORDS)" maxlength="300" asp-for="Summary" aria-describedby="basic-addon1" name="Summary" required style="height:100px; resize:none"></textarea>

                                                        <span asp-validation-for="Summary" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-12 col-lg-12 col-md-12 col-sm-12 ">
                                                    <div class="form-group">

                                                        <label for="objectives">Objectives</label>
                                                        <textarea class="form-control" id="objectives" placeholder="Enter Project Objective" maxlength="300" asp-for="objectives" aria-describedby="basic-addon1" name="objectives" required style="height:100px; resize:none"></textarea>

                                                        <span asp-validation-for="objectives" class="text-danger"></span>

                                                    </div>
                                                </div>


                                                <div class="col-12 col-lg-12 col-md-12 col-sm-12 ">
                                                    <div class="form-group">
                                                        <label for="ExpectedResults">ExpectedResults</label>

                                                        <textarea class="form-control" id="ExpectedResults" placeholder="Enter EXPECTED RESULT(S)/OUTCOME(S)" maxlength="300" asp-for="ExpectedResults" aria-describedby="basic-addon1" name="ExpectedResults" required style="height:100px; resize:none"></textarea>
                                                        <span asp-validation-for="ExpectedResults" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>


                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn grey btn-outline-secondary " data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-outline-primary " id="formsubmit">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
</div>
<!-- END: Content-->
<!-- Modal -->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
