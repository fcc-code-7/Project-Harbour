                                                                <div class="form-group">
                                                                    <fieldset>
                                                                        <div class="input-group">
                                                                            <div class="input-group-prepend">
                                                                                <span class="input-group-text " id="basic-addon2"><i class="fa fa-home" style="color: transparent; -webkit-text-stroke: 1px black;"></i></span>
                                                                            </div>
