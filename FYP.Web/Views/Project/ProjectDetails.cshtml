<script>
    $(document).ready(function () {
        $("#previousbtn").click(function () {
            $.ajax({
                url: '/@user/projects',
                type: "GET",
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {

                }
            });

        });
        $('.NotApproved').on('click', function () {
            var projectId = $(this).attr('id');
            var status = $(this).val(); // "false" for Not Approved

            // Make the AJAX call to change status
            $.ajax({
                url: '/cordinator/ChangeStatus', // Action method URL
                type: 'POST', // HTTP method
                data: { Id: projectId, status: status }, // Data to be sent
                success: function (response) {
                    // Handle success, redirect or display a message
                    $("#MainContainer").html(response);
                },
                error: function () {
                    alert("Failed to update the project status.");
                }
            });
        });

        // Handle click event for the Approved button
        $('.Approved').on('click', function () {
            var projectId = $(this).attr('id');
            var status = $(this).val(); // "true" for Approved

            // Make the AJAX call to change status
            $.ajax({
                url: '/cordinator/ChangeStatus', // Action method URL
                type: 'POST', // HTTP method
                data: { Id: projectId, status: status }, // Data to be sent
                success: function (response) {
                    // Handle success, redirect or display a message
                    $("#MainContainer").html(response);
                },
                error: function () {
                    alert("Failed to update the project status.");
                }
            });
        });
         $('.SupervisorNotApproved').on('click', function () {
            var projectId = $(this).attr('id');
            var status = $(this).val(); // "false" for Not Approved

            // Make the AJAX call to change status
            $.ajax({
                url: '/project/ChangeSupervisorApprovedStatus', // Action method URL
                type: 'POST', // HTTP method
                data: { Id: projectId, status: status }, // Data to be sent
                success: function (response) {
                    // Handle success, redirect or display a message
                    $("#MainContainer").html(response);
                },
                error: function () {
                    alert("Failed to update the project status.");
                }
            });
        });

        // Handle click event for the Approved button
        $('.SupervisorApproved').on('click', function () {
            var projectId = $(this).attr('id');
            var status = $(this).val(); // "true" for Approved

            // Make the AJAX call to change status
            $.ajax({
                url: '/project/ChangeSupervisorApprovedStatus', // Action method URL
