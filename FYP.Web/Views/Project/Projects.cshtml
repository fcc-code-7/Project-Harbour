<!-- BEGIN: Content-->
<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- Section 1 -->
                <div class="mb-2 ">
                    <div class="p-6 bg-white text-black rounded-lg customheightcard">
                        <!-- Column 1: -->

                        <div class="w-full grid sm:grid-cols-1 lg:grid-cols-2 gap-4 ">
                            <div class="p-8 ml-7 text-2xl font-bold ">
                                <h1>Projects</h1>
                            </div>

                        </div>
                    @if (User.IsInRole("Cordinator"))
                    {
                        <div class="grid sm:grid-cols-2 lg:grid-cols-1  bg-gray-100 text-lg ">
                            <table class="w-full">
                                <tr class="sm:grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
                                    <td class="flex justify-center items-center p-2 font-bold">
                                        <p>Semester:</p>
                                    </td>
                                    <td class="flex justify-center items-center p-2">
                                        <select class="p-2 text-center border border-black rounded-lg w-full">
                                            <option value="" disabled selected>Select Semester</option>
                                            <option value="option1">Option 1</option>
                                            <option value="option2">Option 2</option>
                                            <option value="option3">Option 3</option>
                                            <option value="option4">Option 4</option>
                                        </select>
                                    </td>
                                    <td class="flex justify-center items-center p-2 font-bold">
                                        <p>Course:</p>
                                    </td>
                                    <td class="flex justify-center items-center p-2">
                                        <select class="p-2 text-center border border-black rounded-lg w-full">
                                            <option value="" disabled selected>Select Course</option>
                                            <option value="option1">Option 1</option>
                                            <option value="option2">Option 2</option>
                                            <option value="option3">Option 3</option>
                                            <option value="option4">Option 4</option>
                                        </select>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    }
                       
                 
                    @if (Model.projects == null || !Model.projects.Any())
                    {
                        <div class="container mt-0 md:mt-5 lg:mt-5">
                            <div class="row justify-content-center align-items-center" style="min-height: 50vh;">
                                <div class="col-12 col-md-6 col-sm-12 col-lg-6">
                                    <div class="card">
                                        <div class="card-header text-center">
                                            <h5 class="card-title">No Project Exists</h5>
                                        </div>
                                        <div class="card-body text-center mb-3">
                                            <p>It looks like there are currently no projects available.</p>
                                            <button type="button" class="btn btn-sm btn-primary " data-toggle="modal" data-target="#large" id="btnClick">Create New Project</button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                    else
                    {
                        @foreach (var item in Model.projects)
                        {
                            <div class="row justify-content-center align-items-center" style="min-height: 50vh;" id="ViewAll">
                            <div class="col-12 col-md-6 col-sm-12 col-lg-5 ">
                                <div class="card p-0">
                                    <div class="card-header no-border">
                                        <h5 class="card-title">@item.code</h5>
                                    </div>
                                    <div class="card-body pt-0 ">
                                        <div class="widget-49">
                                            <div class="widget-49-title-wrapper">
                                                <div class="widget-49-date-warning">
                                                    <span class="widget-49-date-day">13</span>
                                                    <span class="widget-49-date-month">apr</span>
                                                </div>
                                                <div class="widget-49-meeting-info">
                                                    <span class="widget-49-pro-title">@item.Title</span>
                                                    <span class="widget-49-meeting-time">Batch:@item.batch</span>
                                                </div>
                                            </div>
                                            <ol class="widget-49-meeting-points">
                                                <li class="widget-49-meeting-item"><span>Group:<span class="badge  badge-primary">@item.groupname</span></span></li>
                                                
                                                            @if (@item.Status==false)
                                                            {
                                                    <li class="widget-49-meeting-item">
                                                        <span>
                                                            Status:<span class="badge  badge-danger">
                                                                Not Approved
                                                            </span>
                                                        </span>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="widget-49-meeting-item">
                                                        <span>
                                                            Status:<span class="badge  badge-success">Approved
                                                            </span>
                                                        </span>
                                                    </li>
                                                }
                                                    @{
                                                        
                                                        if (item.TotalMarks == 0)
                                                        {
                                                            <li class="widget-49-meeting-item hidden"><span id="marksDisplay" >Marks:<span class="badge  badge-primary" id="TotalMarks">@item.TotalMarks</span></span></li>

                                                        }
                                                        else
                                                        {
                                                            <li class="widget-49-meeting-item"><span id="marksDisplay" style="display:none;">Marks:<span class="badge  badge-primary" id="TotalMarks">@item.TotalMarks</span></span></li>
                                                        }

                                                        if (item.changeTitleFormStatus == false)
                                                        {
                                                            <li class="widget-49-meeting-item hidden"><span id="ChangeTitleForm">Change Title Form:<span class="badge  badge-primary" id="ChangeTitleForm">Not Requested</span></span></li>
                                                        }

                                                        else
                                                        {
                                                            <li class="widget-49-meeting-item "><span id="ChangeTitleForm">Change Title Form:<span class="badge  badge-primary" id="ChangeTitleForm">Not Requested</span></span></li>

                                                        }
                                                    }

                                            </ol>
                                            <div class="widget-49-meeting-action">
                                                <a href="#" class="btn btn-sm btn-flash-border-warning">Change Title Form</a>
                                                <a href="#" class="btn btn-sm btn-flash-border-warning" id="Edit">Edit</a>
                                               <a href="#" class="btn btn-sm btn-flash-border-warning" id="ViewAll">View All</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> 
                          
                          </div>

                        }
                    }
                </div>
                </div>
           
        </div>
    </div>
</div>
