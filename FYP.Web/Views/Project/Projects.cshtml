<script>

    $(document).ready(function () {
        $("#btnClick").click(function () {
            $.ajax({
                url: '/project/create',
                type: "GET",
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {

                }
            });

        });
        var marks = $("#TotalMarks").val();
        if (marks === 0) {
            $("#marksDisplay").css("display", "none");
        }
        else {
            $("#marksDisplay").css("display", "block");

        }
        $("#ViewAll").click(function () {
            $.ajax({
                url: '/project/projectlist',
                type: "GET",
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {

                }
            });

        });
        $("#ChangeTitleForm").click(function () {
            $.ajax({
                url: '/project/projectlist',
                type: "GET",
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {

                }
            });

        });
    });
</script>
