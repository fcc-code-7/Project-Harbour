<script>
    $(document).ready(function () {
        $(document).on('click', '.assignGroup', function (e) {
            showLoadingSpinner(); // Show the loading spinner
            var groupId = $(this).data("id");
            var batches = $(this).data("batch");
            $.ajax({
                url: "/studentgroups/FetchBatches",
                type: "GET",
                data: { id: groupId, batch: batches, assignRequest: true },
                success: function (response) {
                    hideLoadingSpinner(); // Hide the loading spinner
                    $("#MainContainer").html(response);

                },
                error: function () {

                }
            });

        });

        $(".batchChange").click(function () {
            var batch = $(this).data("id");
            $.ajax({
                url: '/cordinator/StudentGroupbyBatch',
                type: "GET",
                data: { batch: batch }, // Send batch as a query parameter
                success: function (response) {
                    $("#ChangeDiv").html(response);

                    $("#dropdownMenuButton").text(batch);
                },
                error: function () {

                }
            });


        });

    });
</script>

