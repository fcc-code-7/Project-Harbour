    <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body">
            <!-- Section 1 -->
            <div class="mb-2 ">
                <div class="p-6 bg-white text-black rounded-lg " style="min-height:80vh">
                    <!-- Column 1: -->

                    <div class="w-full flex justify-between items-center" id="container">
                        <!-- Left content (div1) -->
                        <div class="p-8 ml-7 text-2xl font-bold" id="div1">
                            <h1>Projects</h1>
                        </div>

                        <!-- Right content (div2) -->
                        <div class="search-container" id="div2">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Select Batch
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @if (Model.batches.Any())
                                    {
                                    @foreach (var item in Model.batches)
                                    {
                                        <a class="dropdown-item batchChange" data-id="@item">@item</a>
                                    }
                                    }else{
                                        <a class="dropdown-item batchChange">No Batch</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="container d-flex justify-content-center align-items-center">

                        <div class="text-center mx-2 btn proposalbtn">
                            <div class="rounded-circle bg-danger d-inline-block" style="width: 15px; height: 15px; vertical-align: middle;"></div>
                            <span class="ms-2 align-middle proposalvalue" data-id="Proposal">Proposal</span>
                        </div>
                        <div class="text-center mx-2 btn midbtn">
                            <div class="rounded-circle bg-primary d-inline-block" style="width: 15px; height: 15px; vertical-align: middle;"></div>
                            <span class="ms-2 align-middle midvalue" data-id="Mid">Mid</span>
                        </div>
                        <div class="text-center mx-2 btn finalbtn">
                            <div class="rounded-circle bg-success d-inline-block" style="width: 15px; height: 15px; vertical-align: middle;"></div>
                            <span class="ms-2 align-middle finalvalue" data-id="Final">Final</span>
                        </div>
                    </div>


                    @if (Model.projects == null || !Model.projects.Any())
                    {
                        <div class="container mt-0 md:mt-5 lg:mt-5">
                            <div class="row justify-content-center align-items-center" style="height:58vh;">
                                <div class="col-12 col-md-6 col-sm-12 col-lg-6">
                                    <div class="card">
                                        <div class="card-header d-flex justify-content-center align-items-center">
                                            <h5 class="card-title"><i class="feather icon-alert-triangle text-danger mx-1"></i>No Project Exists</h5>
                                        </div>
                                  
                                        <div class="card-body text-center mb-3">
                                            <p>It looks like there are currently no projects available yet!</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    }
                    else
                    {
                        
                            <div class="row justify-content-center align-items-center" style="min-height: 58vh;" id="ViewAll">
                                @foreach (var item in Model.projects)
