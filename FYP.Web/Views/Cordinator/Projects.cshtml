                                            </div>
                                            <div class="card-body pt-0 ">
                                                <div class="widget-49">
                                                    <div class="widget-49-title-wrapper">
                                                        <div class="widget-49-date-warning">
                                                        <span class="widget-49-date-day">@(counter = counter + 1)</span>
                                                    </div>
                                                        <div class="widget-49-meeting-info">
                                                            <span class="widget-49-pro-title">@item.Title</span>
                                                            <span class="widget-49-meeting-time">Batch:@item.batch</span>
                                                        </div>
                                                    </div>
                                                    <ol class="widget-49-meeting-points">
                                                        <li class="widget-49-meeting-item"><span>Group:<span class="badge  badge-primary">@item.groupname</span></span></li>

                                                        @if (item.Status == "Approved")
                                                        {
