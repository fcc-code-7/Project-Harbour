<script>
    
  $(document).ready(function () {
        $("#btnClick").click(function () {
            $.ajax({
                url: '/project/create',
                type: "GET",
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {

                }
            });

        });
        $('.proposalbtn').on('click', function () {
            var Type = "Proposal";
            $.ajax({
                url: '/cordinator/Evaluation',
                type: "GET",
                data: { Etype: Type,
                marks : 10
                },
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {
                    // handle error
                }
            });
        });
        $('.midbtn').on('click', function () {
            var Type = "Mid";
            $.ajax({
                url: '/cordinator/Evaluation',
                type: "GET",
                data: { Etype: Type,
                    marks: 30
                },
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {
                    // handle error
                }
            });
        });
        $('.finalbtn').on('click', function () {
            var Type = "Final";
            $.ajax({
                url: '/cordinator/Evaluation',
                type: "GET",
                data: { Etype: Type,
                    marks: 60
                },
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {
                    // handle error
                }
            });
        });
        var marks = $("#TotalMarks").val();
        if (marks === 0) {
            $("#marksDisplay").css("display", "none");
        }
        else {
            $("#marksDisplay").css("display", "block");

        }     
        
        $('.ViewAll').on('click', function () {
            var Code = $(this).data('id');
            $.ajax({
                url: '/project/projectdetails',
                type: "GET",
                data: { code: Code },
                success: function (response) {
                    $("#MainContainer").html(response);
                },
                error: function () {
                    // handle error
                }
            });
        });

        $(".batchChange").click(function () {
            var batch = $(this).data("id");
            $.ajax({
                url: '/cordinator/ProjectGroupbyBatch',
                type: "GET",
                data: { batch: batch }, // Send batch as a query parameter
                success: function (response) {
                    $("#ChangeDiv").html(response);
                    $("#dropdownMenuButton").text(batch);
                },
                error: function () {

                }
            });


        });

  });
</script>

